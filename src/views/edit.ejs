<form method="post" action="/employee/edit">
    <div class="mb-3">
      <label for="disabledTextInput" class="form-label">Employee code</label>
      <input type="text" class="form-control" name="_id" value="<%= employee._id %>" readonly>
    </div>

    <div class="mb-3">
      <label for="disabledSelect" class="form-label">Employee Name</label>
              <input type="text" class="form-control" name="name" value="<%= employee.name %>">
    </div>

    <div class="mb-3">
      <label for="disabledSelect" class="form-label">Employee salary</label>
              <input type="Number" class="form-control" name="salary" value="<%= employee.salary %>">
    </div>

    <div class="mb-3">
      <label for="disabledSelect" class="form-label">Employee age</label>
              <input type="Number" class="form-control" name="age" value="<%= employee.age %>">
    </div>
    <div class="mb-3">
      <label for="disabledSelect" class="form-label"> Employee Branch</label>
      <select id="disabledSelect" class="form-select" name="branch">
          <option value="RnD">Rnd</option>
          <option value="Human Resource">Human Resources</option>
          <option value="Marketing">Marketing</option>
      </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>





